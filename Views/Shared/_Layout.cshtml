<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MusicFlow</title>
    <script src="https://cdn.tailwindcss.com"></script>



</head>
<body class="bg-slate-950 text-slate-100">
    <!-- Header & Navigation -->
    <header class="border-b border-slate-800 bg-slate-900/80 backdrop-blur-md sticky top-0 z-50">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
            <!-- Logo -->
            <div class="flex items-center gap-3 group">
                <div class="relative">
                    <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-pink-600 rounded-lg blur opacity-75 group-hover:opacity-100 transition duration-300"></div>
                    <img id="logo-placeholder" src="/placeholder.svg?height=32&width=32" alt="MusicFlow logo" class="relative h-8 w-8 rounded-lg bg-slate-800">
                    <!-- TODO: Replace the src with your actual logo image path -->
                </div>
                <span class="text-xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">MusicFlow</span>
            </div>

            <!-- Navigation Links -->
            <ul class="hidden md:flex items-center gap-8">
                <li>
                    <a asp-controller="Home" asp-action="Index" class="text-slate-400 hover:text-purple-400 font-medium transition-colors">
                        Home
                    </a>
                </li>
                <li>
                    <a asp-controller="User" asp-action="Login" class="text-slate-400 hover:text-purple-400 font-medium transition-colors">
                        Login
                    </a>
                </li>
                <li>
                    <a asp-controller="User" asp-action="Register" class="px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white rounded-lg font-medium transition-all hover:shadow-lg">
                        Sign Up
                    </a>
                </li>
            </ul>

            <!-- Mobile Menu Button -->
            <button class="md:hidden text-slate-400 hover:text-purple-400">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="min-h-screen">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-t border-slate-800 bg-slate-900/50 mt-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
                <div>
                    <h3 class="font-semibold text-white mb-4">Product</h3>
                    <ul class="space-y-2 text-slate-400 text-sm">
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Features</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Pricing</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Security</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-semibold text-white mb-4">Company</h3>
                    <ul class="space-y-2 text-slate-400 text-sm">
                        <li><a href="#" class="hover:text-purple-400 transition-colors">About</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Blog</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Careers</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-semibold text-white mb-4">Legal</h3>
                    <ul class="space-y-2 text-slate-400 text-sm">
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Privacy</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Terms</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-semibold text-white mb-4">Follow</h3>
                    <ul class="space-y-2 text-slate-400 text-sm">
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Twitter</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Instagram</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Discord</a></li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-slate-800 pt-8 flex flex-col md:flex-row justify-between items-center text-slate-400 text-sm">
                <p>&copy; @DateTime.Now.Year MusicFlow. All rights reserved.</p>
                <p>Crafted with <span class="text-pink-500">â™ª</span> for music lovers</p>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>