<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MusicFlow</title>
    <script src="https://cdn.tailwindcss.com"></script>



</head>

<body class="bg-slate-950 text-slate-100">
    <header class="border-b border-slate-800 bg-slate-900/80 backdrop-blur-md sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
            <!-- Logo -->
            <a href="@Url.Action("Discover", "Home")" <span
                class="text-xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">MusicFlow</span>
            </a>

            <!-- Search Bar -->
            <div class="hidden md:flex flex-1 max-w-md mx-8">
                <div class="relative w-full">
                    <input type="text" placeholder="Search for artists, songs, albums!"
                        class="w-full px-4 py-2 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-400 focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20">
                    <button class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 hover:text-purple-400">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="flex items-center space-x-4">
                @if (ViewBag.IsAuthenticated ?? false)
                {
                    <!-- Authenticated User -->
                    <div class="flex items-center space-x-3">
                        @if (Context.Session.GetString("IsAdmin") == "True")
                        {
                            <a href="@Url.Action("Index", "Admin")"
                                class="px-3 py-2 border border-purple-700 text-purple-300 rounded-lg hover:bg-purple-900/30 transition-colors text-sm">
                                Admin Panel
                            </a>
                        }

                        <!-- User Info - Combined into one div -->
                        <div class="hidden sm:block text-right">
                            @{
                                var username = Context.Session.GetString("Username") ?? ViewBag.UserName;
                                var email = Context.Session.GetString("Email") ?? ViewBag.UserEmail;
                            }
                            <p class="text-sm text-white">@username</p>
                            <p class="text-xs text-slate-400">@email</p>
                        </div>

                        <!-- Profile Button -->
                        <a href="@Url.Action("Profile", "User")"
                            class="flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg hover:opacity-90 transition-opacity">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span class="hidden sm:inline">Profile</span>
                        </a>

                        <!-- Logout Button -->
                        <a href="@Url.Action("Logout", "User")"
                            class="px-4 py-2 border border-slate-700 text-slate-300 rounded-lg hover:bg-slate-800 transition-colors">
                            Logout
                        </a>
                    </div>
                }
                else
                {
                    <!-- Guest User -->
                    <div class="flex items-center space-x-3">
                        <a href="@Url.Action("Login", "User")"
                            class="px-4 py-2 border border-slate-700 text-slate-300 rounded-lg hover:bg-slate-800 transition-colors">
                            Login
                        </a>
                        <a href="@Url.Action("Register", "User")"
                            class="px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg hover:opacity-90 transition-opacity">
                            Sign Up
                        </a>
                    </div>
                }
            </div>

        </div>
    </header>


    <main class="min-h-screen">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-t border-slate-800 bg-slate-900/50 mt-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
                <div>
                    <h3 class="font-semibold text-white mb-4">Product</h3>
                    <ul class="space-y-2 text-slate-400 text-sm">
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Features</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Pricing</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Security</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-semibold text-white mb-4">Company</h3>
                    <ul class="space-y-2 text-slate-400 text-sm">
                        <li><a href="#" class="hover:text-purple-400 transition-colors">About</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Blog</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Careers</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-semibold text-white mb-4">Legal</h3>
                    <ul class="space-y-2 text-slate-400 text-sm">
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Privacy</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Terms</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-semibold text-white mb-4">Follow</h3>
                    <ul class="space-y-2 text-slate-400 text-sm">
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Twitter</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Instagram</a></li>
                        <li><a href="#" class="hover:text-purple-400 transition-colors">Discord</a></li>
                    </ul>
                </div>
            </div>
            <div
                class="border-t border-slate-800 pt-8 flex flex-col md:flex-row justify-between items-center text-slate-400 text-sm">
                <p>&copy; @DateTime.Now.Year MusicFlow. All rights reserved.</p>
                <p>Crafted with <span class="text-pink-500">â™ª</span> for music lovers</p>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>

</html>