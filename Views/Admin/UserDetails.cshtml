@model AdminUserDetailsViewModel
@{
    ViewBag.Title = $"User Details - {Model.User.Username}";
    ViewBag.IsAuthenticated = true;
}

<div class="gradient-bg min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Back Button -->
        <div class="mb-6">
            <a href="@Url.Action("Users", "Admin")" 
               class="inline-flex items-center text-purple-400 hover:text-purple-300">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Users
            </a>
        </div>

        <!-- User Profile Card -->
        <div class="admin-card p-8 rounded-2xl mb-8">
            <div class="flex items-center justify-between mb-8">
                <div class="flex items-center">
                    <div class="w-20 h-20 bg-gradient-to-br from-purple-600 to-pink-600 rounded-full flex items-center justify-center text-white text-2xl font-bold mr-6">
                        @Model.User.Firstname?[0]@Model.User.Lastname?[0]
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-white mb-2">@Model.User.Username</h1>
                        <p class="text-slate-400">@Model.User.Firstname @Model.User.Lastname</p>
                        <p class="text-slate-400">@Model.User.Email</p>
                    </div>
                </div>
                <div class="flex space-x-3">
                    <a href="@Url.Action("EditUser", "Admin", new { id = Model.User.UserId })" 
                       class="action-button px-6 py-3 rounded-lg text-white">
                        Edit User
                    </a>
                    @if (!Model.User.IsAdmin)
                    {
                        <a href="@Url.Action("DeleteUser", "Admin", new { id = Model.User.UserId })" 
                           class="px-6 py-3 rounded-lg border border-red-700 text-red-400 hover:bg-red-900/30 transition-colors">
                            Delete User
                        </a>
                    }
                </div>
            </div>

            <!-- User Info Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <div class="bg-slate-900/50 p-6 rounded-xl">
                    <p class="text-slate-400 text-sm mb-2">User ID</p>
                    <p class="text-white font-medium">@Model.User.UserId</p>
                </div>
                <div class="bg-slate-900/50 p-6 rounded-xl">
                    <p class="text-slate-400 text-sm mb-2">Joined Date</p>
                    <p class="text-white font-medium">@Model.User.CreatedAt.ToString("MMMM dd, yyyy")</p>
                </div>
                <div class="bg-slate-900/50 p-6 rounded-xl">
                    <p class="text-slate-400 text-sm mb-2">Favorite Genre</p>
                    <p class="text-white font-medium">@(Model.User.Genre ?? "Not specified")</p>
                </div>
                <div class="bg-slate-900/50 p-6 rounded-xl">
                    <p class="text-slate-400 text-sm mb-2">Account Status</p>
                    <p class="@(Model.User.IsActive ? "text-green-400" : "text-red-400") font-medium">
                        @(Model.User.IsActive ? "Active" : "Inactive")
                    </p>
                </div>
            </div>

            <!-- Admin Status -->
            <div class="bg-slate-900/50 p-6 rounded-xl mb-8">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-400 text-sm mb-2">Admin Privileges</p>
                        <p class="@(Model.User.IsAdmin ? "text-purple-400" : "text-slate-400") font-medium">
                            @(Model.User.IsAdmin ? "Administrator" : "Regular User")
                        </p>
                    </div>
                    @if (Model.User.IsAdmin)
                    {
                        <span class="badge-admin text-lg">ADMIN</span>
                    }
                </div>
            </div>

            <!-- User Statistics -->
            <div>
                <h3 class="text-xl font-bold text-white mb-6">User Statistics</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    <div class="admin-card p-6 rounded-xl">
                        <p class="text-slate-400 text-sm mb-2">Total Plays</p>
                        <p class="stat-number">@Model.Statistics.TotalPlays</p>
                    </div>
                    <div class="admin-card p-6 rounded-xl">
                        <p class="text-slate-400 text-sm mb-2">Total Playlists</p>
                        <p class="stat-number">@Model.Statistics.TotalPlaylists</p>
                    </div>
                    <div class="admin-card p-6 rounded-xl">
                        <p class="text-slate-400 text-sm mb-2">Total Downloads</p>
                        <p class="stat-number">@Model.Statistics.TotalDownloads</p>
                    </div>
                    <div class="admin-card p-6 rounded-xl">
                        <p class="text-slate-400 text-sm mb-2">Time Played</p>
                        <p class="stat-number">
                            @{
                                var totalSeconds = Model.Statistics.TotalSecondsPlayed;
                                var hours = totalSeconds / 3600;
                                var minutes = (totalSeconds % 3600) / 60;
                                @($"{hours}h {minutes}m")
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>