@model AdminSongsViewModel
@{
    ViewBag.Title = "Manage Songs - Admin Panel";
    ViewBag.IsAuthenticated = true;
}

<div class="gradient-bg min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-white mb-2">Manage Songs</h1>
                <p class="text-slate-400">View and manage all songs in the system</p>
            </div>
            <div>
                <a href="@Url.Action("Index", "Admin")" 
                   class="px-4 py-2 border border-slate-700 text-slate-300 rounded-lg hover:bg-slate-800 transition-colors">
                    Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Navigation -->
        <div class="flex space-x-1 mb-8 bg-slate-900/50 rounded-xl p-1">
            <a href="@Url.Action("Index", "Admin")" 
               class="nav-link">
                Dashboard
            </a>
            <a href="@Url.Action("Users", "Admin")" 
               class="nav-link">
                Users
            </a>
            <a href="@Url.Action("Songs", "Admin")" 
               class="nav-link active">
                Songs
            </a>
        </div>

        <!-- Search Box -->
        <div class="search-box p-6 rounded-2xl mb-8">
            <form method="get" action="@Url.Action("Songs", "Admin")" class="flex items-center space-x-4">
                <div class="flex-1">
                    <input type="text" name="search" value="@Model.SearchTerm" 
                           placeholder="Search songs by title or artist..."
                           class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-400 focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20">
                </div>
                <button type="submit" class="action-button px-6 py-3 rounded-lg text-white">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <a href="@Url.Action("Songs", "Admin")" 
                       class="px-4 py-3 border border-slate-700 text-slate-300 rounded-lg hover:bg-slate-800 transition-colors">
                        Clear
                    </a>
                }
            </form>
        </div>

        <!-- Songs Table -->
        <div class="admin-card p-6 rounded-2xl">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-bold text-white">Songs (@Model.TotalCount total)</h3>
                <div class="text-slate-400">
                    Page @Model.Page of @Model.TotalPages
                </div>
            </div>

            <div class="admin-table">
                <table class="w-full">
                    <thead>
                        <tr>
                            <th>Song</th>
                            <th>Artist</th>
                            <th>Uploaded</th>
                            <th>Plays</th>
                            <th>Duration</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var song in Model.Songs)
                        {
                            <tr>
                                <td>
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 bg-slate-800 rounded-lg flex items-center justify-center mr-3">
                                            <svg class="w-5 h-5 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <p class="text-white font-medium">@song.Title</p>
                                            <p class="text-slate-400 text-sm">ID: @song.SongId</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-slate-400">@(song.Artist?.Username ?? "Unknown")</td>
                                <td class="text-slate-400">@song.UploadeAt.ToString("MMM dd, yyyy")</td>
                                <td class="text-slate-400">@song.PlayCounts</td>
                                <td class="text-slate-400">@TimeSpan.FromSeconds(song.DurationSeconds).ToString(@"mm\:ss")</td>
                                <td>
                                    <div class="flex space-x-2">
                                        <a href="@Url.Action("SongDetails", "Admin", new { id = song.SongId })" 
                                           class="action-button px-3 py-1 rounded text-sm">
                                            View
                                        </a>
                                        <a href="@Url.Action("DeleteSong", "Admin", new { id = song.SongId })" 
                                           class="px-3 py-1 rounded text-sm border border-red-700 text-red-400 hover:bg-red-900/30 transition-colors">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="flex justify-center items-center space-x-2 mt-8">
                    <a href="@Url.Action("Songs", "Admin", new { search = Model.SearchTerm, page = Math.Max(1, Model.Page - 1) })" 
                       class="pagination-button @(Model.Page <= 1 ? "disabled" : "")">
                        Previous
                    </a>
                    
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <a href="@Url.Action("Songs", "Admin", new { search = Model.SearchTerm, page = i })" 
                           class="pagination-button @(i == Model.Page ? "active" : "")">
                            @i
                        </a>
                    }
                    
                    <a href="@Url.Action("Songs", "Admin", new { search = Model.SearchTerm, page = Math.Min(Model.TotalPages, Model.Page + 1) })" 
                       class="pagination-button @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                        Next
                    </a>
                </div>
            }
        </div>
    </div>
</div>