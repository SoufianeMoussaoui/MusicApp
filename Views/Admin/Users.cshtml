@model AdminUsersViewModel
@{
    ViewBag.Title = "Manage Users - Admin Panel";
    ViewBag.IsAuthenticated = true;
}

<style>
    .search-box {
        background: rgba(30, 41, 59, 0.5);
        border: 1px solid rgba(168, 85, 247, 0.2);
        backdrop-filter: blur(10px);
    }

    .action-button {
        transition: all 0.3s ease;
        background: rgba(168, 85, 247, 0.1);
        border: 1px solid rgba(168, 85, 247, 0.3);
    }

    .action-button:hover {
        background: rgba(168, 85, 247, 0.2);
        transform: scale(1.05);
    }

    .pagination-button {
        padding: 8px 16px;
        border: 1px solid rgba(168, 85, 247, 0.2);
        color: #a78bfa;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .pagination-button:hover:not(.disabled) {
        background: rgba(168, 85, 247, 0.1);
        border-color: rgba(168, 85, 247, 0.4);
    }

    .pagination-button.disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .pagination-button.active {
        background: rgba(168, 85, 247, 0.2);
        border-color: #a855f7;
    }
</style>

<div class="gradient-bg min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-white mb-2">Manage Users</h1>
                <p class="text-slate-400">View and manage all registered users</p>
            </div>
            <div>
                <a href="@Url.Action("Index", "Admin")" 
                   class="px-4 py-2 border border-slate-700 text-slate-300 rounded-lg hover:bg-slate-800 transition-colors">
                    Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Navigation -->
        <div class="flex space-x-1 mb-8 bg-slate-900/50 rounded-xl p-1">
            <a href="@Url.Action("Index", "Admin")" 
               class="nav-link">
                Dashboard
            </a>
            <a href="@Url.Action("Users", "Admin")" 
               class="nav-link active">
                Users
            </a>
            <a href="@Url.Action("Songs", "Admin")" 
               class="nav-link">
                Songs
            </a>
        </div>

        <!-- Search Box -->
        <div class="search-box p-6 rounded-2xl mb-8">
            <form method="get" action="@Url.Action("Users", "Admin")" class="flex items-center space-x-4">
                <div class="flex-1">
                    <input type="text" name="search" value="@Model.SearchTerm" 
                           placeholder="Search users by username, email, or name..."
                           class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-400 focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20">
                </div>
                <button type="submit" class="action-button px-6 py-3 rounded-lg text-white">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <a href="@Url.Action("Users", "Admin")" 
                       class="px-4 py-3 border border-slate-700 text-slate-300 rounded-lg hover:bg-slate-800 transition-colors">
                        Clear
                    </a>
                }
            </form>
        </div>

        <!-- Users Table -->
        <div class="admin-card p-6 rounded-2xl">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-bold text-white">Users (@Model.TotalCount total)</h3>
                <div class="text-slate-400">
                    Page @Model.Page of @Model.TotalPages
                </div>
            </div>

            <div class="admin-table">
                <table class="w-full">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Joined</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 bg-gradient-to-br from-purple-600 to-pink-600 rounded-full flex items-center justify-center text-white text-sm mr-3">
                                            @user.Firstname?[0]@user.Lastname?[0]
                                        </div>
                                        <div>
                                            <p class="text-white font-medium">@user.Username</p>
                                            <p class="text-slate-400 text-sm">@user.Firstname @user.Lastname</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-slate-400">@user.Email</td>
                                <td class="text-slate-400">@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (user.IsAdmin)
                                    {
                                        <span class="badge-admin">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="@(user.IsActive ? "badge-active" : "badge-inactive")">
                                            @(user.IsActive ? "Active" : "Inactive")
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="flex space-x-2">
                                        <a href="@Url.Action("UserDetails", "Admin", new { id = user.UserId })" 
                                           class="action-button px-3 py-1 rounded text-sm">
                                            View
                                        </a>
                                        <a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })" 
                                           class="action-button px-3 py-1 rounded text-sm">
                                            Edit
                                        </a>
                                        @if (!user.IsAdmin)
                                        {
                                            <a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })" 
                                               class="px-3 py-1 rounded text-sm border border-red-700 text-red-400 hover:bg-red-900/30 transition-colors">
                                                Delete
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="flex justify-center items-center space-x-2 mt-8">
                    <a href="@Url.Action("Users", "Admin", new { search = Model.SearchTerm, page = Math.Max(1, Model.Page - 1) })" 
                       class="pagination-button @(Model.Page <= 1 ? "disabled" : "")">
                        Previous
                    </a>
                    
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <a href="@Url.Action("Users", "Admin", new { search = Model.SearchTerm, page = i })" 
                           class="pagination-button @(i == Model.Page ? "active" : "")">
                            @i
                        </a>
                    }
                    
                    <a href="@Url.Action("Users", "Admin", new { search = Model.SearchTerm, page = Math.Min(Model.TotalPages, Model.Page + 1) })" 
                       class="pagination-button @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                        Next
                    </a>
                </div>
            }
        </div>
    </div>
</div>