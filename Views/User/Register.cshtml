@model musicApp.Models.User;

@{
    ViewBag.Title = "Sign Up";
}

<div class="gradient-bg min-h-screen flex items-center justify-center px-4 py-12 relative">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl w-full items-center">
        <!-- Left Side - Hero Content -->
        <div class="hidden lg:flex flex-col justify-center space-y-8 relative z-10">
            <div class="space-y-4">
                <div class="inline-block">
                    <span class="px-3 py-1 bg-pink-500/20 border border-pink-500/50 rounded-full text-pink-300 text-sm font-medium">
                        Join the Community
                    </span>
                </div>
                <h1 class="text-5xl lg:text-6xl font-bold text-white leading-tight">
                    Start Your<br><span class="bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">Music Journey</span>
                </h1>
                <p class="text-xl text-slate-400 max-w-md">
                    Create your account and unlock a world of unlimited music, personalized recommendations, and exclusive content.
                </p>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-3 gap-4">
                <div class="bg-slate-800/50 backdrop-blur border border-slate-700 rounded-lg p-4">
                    <div class="text-2xl font-bold text-purple-400">70M+</div>
                    <div class="text-sm text-slate-400">Songs</div>
                </div>
                <div class="bg-slate-800/50 backdrop-blur border border-slate-700 rounded-lg p-4">
                    <div class="text-2xl font-bold text-purple-400">50M+</div>
                    <div class="text-sm text-slate-400">Users</div>
                </div>
                <div class="bg-slate-800/50 backdrop-blur border border-slate-700 rounded-lg p-4">
                    <div class="text-2xl font-bold text-purple-400">24/7</div>
                    <div class="text-sm text-slate-400">Support</div>
                </div>
            </div>
        </div>

        <!-- Right Side - Registration Form -->
        <div class="w-full max-w-md mx-auto relative z-10">
            <div class="bg-slate-900/60 backdrop-blur-xl border border-slate-800 rounded-2xl p-8 shadow-2xl">
                <!-- Header -->
                <div class="mb-8">
                    <h2 class="text-3xl font-bold text-white mb-2">Create Account</h2>
                    <p class="text-slate-400">Join millions of music lovers</p>
                </div>

                <!-- Error/Success Messages -->
                <div id="messageContainer">
            

                </div>

                <!-- Registration Form -->
                <form asp-action="Register" asp-controller="User"  method="post" id="registerForm" class="space-y-4">
                    @Html.AntiForgeryToken()
                    <!-- Username Field -->
                    <div>
                        <label for="username" class="block text-sm font-semibold text-slate-200 mb-2">
                            Username
                        </label>
                        <input 
                            type="text" 
                            id="username" 
                            name="username" 
                            required 
                            aria-required="true"
                            aria-describedby="username-error"
                            class="form-input w-full px-4 py-3 rounded-lg text-white placeholder-slate-500"
                            placeholder="johndoe">
                        <span id="username-error" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <!-- First Name Field -->
                    <div>
                        <label for="firstName" class="block text-sm font-semibold text-slate-200 mb-2">
                            First Name <span class="text-slate-500 font-normal">(optional)</span>
                        </label>
                        <input 
                            type="text" 
                            id="firstName" 
                            name="firstName" 
                            aria-describedby="firstName-error"
                            class="form-input w-full px-4 py-3 rounded-lg text-white placeholder-slate-500"
                            placeholder="Enter your first name">
                        <span id="firstName-error" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <!-- Last Name Field -->
                    <div>
                        <label for="lastName" class="block text-sm font-semibold text-slate-200 mb-2">
                            Last Name <span class="text-slate-500 font-normal">(optional)</span>
                        </label>
                        <input 
                            type="text" 
                            id="lastName" 
                            name="lastName" 
                            aria-describedby="lastName-error"
                            class="form-input w-full px-4 py-3 rounded-lg text-white placeholder-slate-500"
                            placeholder="Enter your last name">
                        <span id="lastName-error" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <!-- Email Field -->
                    <div>
                        <label for="email" class="block text-sm font-semibold text-slate-200 mb-2">
                            Email Address
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            required 
                            aria-required="true"
                            aria-describedby="email-error"
                            class="form-input w-full px-4 py-3 rounded-lg text-white placeholder-slate-500"
                            placeholder="you@example.com">
                        <span id="email-error" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <!-- Password Field -->
                    <div>
                        <label for="password" class="block text-sm font-semibold text-slate-200 mb-2">
                            Password
                        </label>
                        <div class="relative">
                            <input 
                                type="password" 
                                id="password" 
                                name="password" 
                                required 
                                aria-required="true"
                                aria-describedby="password-error"
                                class="form-input w-full px-4 py-3 rounded-lg text-white placeholder-slate-500 pr-12"
                                placeholder="••••••••">
                            <!-- Password Toggle Button -->
                            <button 
                                type="button" 
                                class="password-toggle absolute right-4 top-1/2 -translate-y-1/2 text-slate-400"
                                aria-label="Toggle password visibility"
                                onclick="togglePasswordVisibility('password')">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </button>
                        </div>
                        <span id="password-error" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <!-- Confirm Password Field -->
                    <div>
                        <label for="confirmPassword" class="block text-sm font-semibold text-slate-200 mb-2">
                            Confirm Password
                        </label>
                        <div class="relative">
                            <input 
                                type="password" 
                                id="confirmPassword" 
                                name="confirmPassword" 
                                required 
                                aria-required="true"
                                aria-describedby="confirmPassword-error"
                                class="form-input w-full px-4 py-3 rounded-lg text-white placeholder-slate-500 pr-12"
                                placeholder="••••••••">
                            <!-- Password Toggle Button -->
                            <button 
                                type="button" 
                                class="password-toggle absolute right-4 top-1/2 -translate-y-1/2 text-slate-400"
                                aria-label="Toggle password visibility">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </button>
                        </div>
                        <span id="confirmPassword-error" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <!-- Terms Checkbox -->
                    <div class="flex items-start pt-2">
                        <input 
                            type="checkbox" 
                            id="terms" 
                            name="terms" 
                            required
                            class="w-4 h-4 bg-slate-800 border border-slate-700 rounded cursor-pointer accent-purple-600 mt-1">
                        <label for="terms" class="ml-3 text-sm text-slate-300 cursor-pointer">
                            I agree to the <a href="#" class="text-purple-400 hover:text-purple-300">Terms of Service</a> and <a href="#" class="text-purple-400 hover:text-purple-300">Privacy Policy</a>
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button 
                        type="submit" 
                        class="btn-primary w-full py-3 text-white font-semibold rounded-lg mt-6">
                        Create Account
                    </button>
                </form>

                <!-- Divider -->
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-slate-700"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-slate-900/60 stext-slate-400">Already have an account?</span>
                    </div>
                </div>

                <!-- Sign In Link -->
                <a href="/User/Login" class="block w-full py-3 border border-slate-700 hover:border-purple-500 text-center text-white font-semibold rounded-lg transition-colors hover:bg-slate-800/50">
                    Sign In
                </a>
            </div>

            <!-- Footer Text -->
            <p class="text-center text-slate-400 text-sm mt-6">
                By creating an account, you agree to our <a href="#" class="text-purple-400 hover:text-purple-300">Terms of Service</a> and <a href="#" class="text-purple-400 hover:text-purple-300">Privacy Policy</a>
            </p>
        </div>
    </div>
</div>

