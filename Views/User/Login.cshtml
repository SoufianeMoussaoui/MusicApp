@{
    ViewBag.Title = "Login";
}

<div class="gradient-bg min-h-screen flex items-center justify-center px-4 py-12 relative">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl w-full items-center">
        <!-- Left Side - Hero Content -->
        <div class="hidden lg:flex flex-col justify-center space-y-8 relative z-10">
            <div class="space-y-4">
                <div class="inline-block">
                    <span class="px-3 py-1 bg-purple-500/20 border border-purple-500/50 rounded-full text-purple-300 text-sm font-medium">
                        Welcome Back
                    </span>
                </div>
                <h1 class="text-5xl lg:text-6xl font-bold text-white leading-tight">
                    Your Music,<br><span class="bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">Your Way</span>
                </h1>
                <p class="text-xl text-slate-400 max-w-md">
                    Sign in to access millions of songs, personalized playlists, and discover new artists.
                </p>
            </div>

            <!-- Feature List -->
            <div class="space-y-4">
                <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-lg bg-purple-500/20 flex items-center justify-center flex-shrink-0 mt-1">
                        <svg class="w-5 h-5 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-semibold text-white">Unlimited Streaming</h3>
                        <p class="text-slate-400 text-sm">Access millions of songs ad-free</p>
                    </div>
                </div>
                <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-lg bg-purple-500/20 flex items-center justify-center flex-shrink-0 mt-1">
                        <svg class="w-5 h-5 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-semibold text-white">Personalized Playlists</h3>
                        <p class="text-slate-400 text-sm">Curated just for your taste</p>
                    </div>
                </div>
                <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-lg bg-purple-500/20 flex items-center justify-center flex-shrink-0 mt-1">
                        <svg class="w-5 h-5 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-semibold text-white">High Quality Audio</h3>
                        <p class="text-slate-400 text-sm">Crystal clear sound on all devices</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="w-full max-w-md mx-auto relative z-10">
            <div class="bg-slate-900/60 backdrop-blur-xl border border-slate-800 rounded-2xl p-8 shadow-2xl">
                <!-- Header -->
                <div class="mb-8">
                    <h2 class="text-3xl font-bold text-white mb-2">Sign In</h2>
                    <p class="text-slate-400">Enter your credentials to continue</p>
                </div>

                <!-- Error/Success Messages -->
                <div id="messageContainer"></div>

                <!-- Login Form -->
                <form asp-action="Login" asp-controller="User" method="post" id="loginForm" class="space-y-5">
                    <!-- Email Field -->
                    <div>
                        <label for="email" class="block text-sm font-semibold text-slate-200 mb-2">
                            Email Address
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            required 
                            aria-required="true"
                            aria-describedby="email-error"
                            class="form-input w-full px-4 py-3 rounded-lg text-white placeholder-slate-500"
                            placeholder="you@example.com">
                        <span id="email-error" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <!-- Password Field -->
                    <div>
                        <label for="password" class="block text-sm font-semibold text-slate-200 mb-2">
                            Password
                        </label>
                        <div class="relative">
                            <input 
                                type="password" 
                                id="password" 
                                name="password" 
                                required 
                                aria-required="true"
                                aria-describedby="password-error"
                                class="form-input w-full px-4 py-3 rounded-lg text-white placeholder-slate-500 pr-12"
                                placeholder="••••••••">
                            <!-- Password Toggle Button -->
                            <button 
                                type="button" 
                                class="password-toggle absolute right-4 top-1/2 -translate-y-1/2 text-slate-400"
                                aria-label="Toggle password visibility"
                                onclick="togglePasswordVisibility('password')">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </button>
                        </div>
                        <span id="password-error" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <!-- Remember Me Checkbox -->
                    <div class="flex items-center pt-2">
                        <input 
                            type="checkbox" 
                            id="rememberMe" 
                            name="rememberMe" 
                            class="w-4 h-4 bg-slate-800 border border-slate-700 rounded cursor-pointer accent-purple-600">
                        <label for="rememberMe" class="ml-3 text-sm text-slate-300 cursor-pointer">
                            Keep me signed in
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button 
                        type="submit" 
                        class="btn-primary w-full py-3 text-white font-semibold rounded-lg mt-6">
                        Sign In
                    </button>
                </form>

                <!-- Divider -->
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-slate-700"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-slate-900/60 text-slate-400">New to MusicFlow?</span>
                    </div>
                </div>

                <!-- Sign Up Link -->
                <a href="/register" class="block w-full py-3 border border-slate-700 hover:border-purple-500 text-center text-white font-semibold rounded-lg transition-colors hover:bg-slate-800/50">
                    Create Account
                </a>
            </div>

            <!-- Footer Text -->
            <p class="text-center text-slate-400 text-sm mt-6">
                By signing in, you agree to our <a href="#" class="text-purple-400 hover:text-purple-300">Terms of Service</a> and <a href="#" class="text-purple-400 hover:text-purple-300">Privacy Policy</a>
            </p>
        </div>
    </div>
</div>