@model IEnumerable<musicApp.Models.Lyrics>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SongId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LyricsText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LyricsSource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SongId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LyricsText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LyricsSource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LyricsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LyricsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LyricsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
