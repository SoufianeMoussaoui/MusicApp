@model musicApp.Models.Lyrics

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Lyrics</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LyricsId" />
            <div class="form-group">
                <label asp-for="SongId" class="control-label"></label>
                <input asp-for="SongId" class="form-control" />
                <span asp-validation-for="SongId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LyricsText" class="control-label"></label>
                <input asp-for="LyricsText" class="form-control" />
                <span asp-validation-for="LyricsText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LyricsSource" class="control-label"></label>
                <input asp-for="LyricsSource" class="form-control" />
                <span asp-validation-for="LyricsSource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddedAt" class="control-label"></label>
                <input asp-for="AddedAt" class="form-control" />
                <span asp-validation-for="AddedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
