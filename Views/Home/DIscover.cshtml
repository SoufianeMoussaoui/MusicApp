@model DiscoverViewModel
@{
    ViewBag.Title = "Discover - MusicFlow";
}

@functions {
    string GetWebPath(string fullPath)
    {
        if (string.IsNullOrEmpty(fullPath)) return "";
        var relativePath = fullPath.Replace("/home/soufiane/Music", "");
        return $"/music{relativePath}";
    }
}

<style>
    .gradient-bg {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f172a 100%);
    }

    .sidebar-item {
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .sidebar-item:hover {
        background-color: rgba(168, 85, 247, 0.1);
        transform: translateX(4px);
    }

    .song-card,
    .album-card {
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        cursor: pointer;
    }

    .song-card:hover,
    .album-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(168, 85, 247, 0.3);
    }

    .play-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.6);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .song-card:hover .play-overlay,
    .album-card:hover .play-overlay {
        opacity: 1;
    }

    .play-icon-overlay {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .play-icon-overlay:hover {
        transform: scale(1.1);
        box-shadow: 0 0 30px rgba(168, 85, 247, 0.6);
    }

    .genre-badge {
        display: inline-block;
        padding: 6px 14px;
        background-color: rgba(168, 85, 247, 0.1);
        border: 1px solid rgba(168, 85, 247, 0.5);
        border-radius: 20px;
        color: #a78bfa;
        font-size: 12px;
        font-weight: 500;
        margin-right: 8px;
        margin-bottom: 8px;
    }
</style>
<div class="search-box p-6 rounded-2xl mb-8 bg-slate-900/50 backdrop-blur-sm border border-slate-700/50">
    <form method="get" action="@Url.Action("Discover", "Home")" class="flex items-center space-x-4">
        <div class="flex-1 relative">
            <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-slate-400" 
                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <input type="text" 
                   name="search" 
                   value="@Model.SearchTerm" 
                   placeholder="Search songs by title, artist, or genre..."
                   class="w-full pl-12 pr-4 py-3 form-input rounded-lg bg-slate-800/80 border-slate-700 text-white placeholder-slate-400 focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20 transition-all duration-200">
        </div>
        <button type="submit" 
                class="btn-primary px-6 py-3 rounded-lg text-white font-medium flex items-center space-x-2">
            <span>Search</span>
        </button>
        @if (!string.IsNullOrEmpty(Model.SearchTerm))
        {
            <a href="@Url.Action("Discover", "Home")" 
               class="px-4 py-3 border border-slate-700 text-slate-300 rounded-lg hover:bg-slate-800 transition-colors duration-200">
                Clear
            </a>
        }
    </form>
</div>


<div class="gradient-bg min-h-screen">
    
    <div class="flex">
             <aside class="hidden lg:w-64 lg:flex lg:flex-col border-r border-slate-800 bg-slate-900/40 backdrop-blur sticky top-20 h-fit">
            <nav class="p-6 space-y-8">
                <!-- Browse Section -->
                <div>
                    <h3 class="text-xs font-bold text-amber-500 uppercase tracking-widest mb-4">Browse</h3>
                    <ul class="space-y-3">
                        <li>
                            <a href="@Url.Action("Discover", "Home", new { filter = "home", genre = Model.CurrentGenre, search = Model.SearchTerm })" 
                               class="sidebar-item block px-4 py-2 @(Model.CurrentFilter == "home" ? "bg-purple-900/30 text-white border-l-2 border-purple-500" : "text-slate-300 hover:text-white") font-medium rounded-lg transition-all duration-200">
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Discover", "Home", new { filter = "trending-songs", genre = Model.CurrentGenre, search = Model.SearchTerm })" 
                               class="sidebar-item block px-4 py-2 @(Model.CurrentFilter == "trending-songs" ? "bg-purple-900/30 text-white border-l-2 border-purple-500" : "text-slate-300 hover:text-white") font-medium rounded-lg transition-all duration-200">
                                Trending Songs
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Discover", "Home", new { filter = "trending-albums", genre = Model.CurrentGenre, search = Model.SearchTerm })" 
                               class="sidebar-item block px-4 py-2 @(Model.CurrentFilter == "trending-albums" ? "bg-purple-900/30 text-white border-l-2 border-purple-500" : "text-slate-300 hover:text-white") font-medium rounded-lg transition-all duration-200">
                                Trending Albums
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Discover", "Home", new { filter = "recently-added", genre = Model.CurrentGenre, search = Model.SearchTerm })" 
                               class="sidebar-item block px-4 py-2 @(Model.CurrentFilter == "recently-added" ? "bg-purple-900/30 text-white border-l-2 border-purple-500" : "text-slate-300 hover:text-white") font-medium rounded-lg transition-all duration-200">
                                Recently Added
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Charts Section -->
                <div>
                    <h3 class="text-xs font-bold text-amber-500 uppercase tracking-widest mb-4">Charts</h3>
                    <ul class="space-y-3">
                        <li>
                            <a href="@Url.Action("Discover", "Home", new { filter = "top-songs", genre = Model.CurrentGenre, search = Model.SearchTerm })" 
                               class="sidebar-item block px-4 py-2 @(Model.CurrentFilter == "top-songs" ? "bg-purple-900/30 text-white border-l-2 border-purple-500" : "text-slate-300 hover:text-white") font-medium rounded-lg transition-all duration-200">
                                Top Songs
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Discover", "Home", new { filter = "top-albums", genre = Model.CurrentGenre, search = Model.SearchTerm })" 
                               class="sidebar-item block px-4 py-2 @(Model.CurrentFilter == "top-albums" ? "bg-purple-900/30 text-white border-l-2 border-purple-500" : "text-slate-300 hover:text-white") font-medium rounded-lg transition-all duration-200">
                                Top Albums
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Genres Section -->
                <div>
                    <h3 class="text-xs font-bold text-amber-500 uppercase tracking-widest mb-4">Genres</h3>
                    <div class="flex flex-wrap gap-2">
                        <a href="@Url.Action("Discover", "Home", new { filter = Model.CurrentFilter, genre = "all", search = Model.SearchTerm })" 
                           class="genre-badge @(string.IsNullOrEmpty(Model.CurrentGenre) || Model.CurrentGenre == "all" ? "bg-purple-900 text-white border-purple-500" : "")">
                            All Genres
                        </a>
                        
                        @foreach (var genre in Model.AvailableGenres.Take(8))
                        {
                            <a href="@Url.Action("Discover", "Home", new { filter = Model.CurrentFilter, genre = genre, search = Model.SearchTerm })" 
                               class="genre-badge @(Model.CurrentGenre == genre ? "bg-purple-900 text-white border-purple-500" : "")">
                                @genre
                            </a>
                        }
                        
                        @if (Model.AvailableGenres.Count > 8)
                        {
                            <div class="relative group">
                                <button class="genre-badge">
                                    More...
                                </button>
                                <div class="absolute left-0 mt-2 w-48 bg-slate-800 border border-slate-700 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10">
                                    <div class="p-2 max-h-64 overflow-y-auto">
                                        @foreach (var genre in Model.AvailableGenres.Skip(8))
                                        {
                                            <a href="@Url.Action("Discover", "Home", new { filter = Model.CurrentFilter, genre = genre, search = Model.SearchTerm })" 
                                               class="block px-3 py-2 text-sm text-slate-300 hover:text-white hover:bg-slate-700 rounded transition-colors">
                                                @genre
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </nav>
        </aside>

        <!-- Main Content Area -->
        <main class="flex-1 px-4 md:px-8 py-8">
            <!-- Trending Songs Section -->
            <section class="mb-16">
                <div class="flex items-center justify-between mb-8">
                    <h2 class="text-3xl font-bold text-white">Trending Songs</h2>
                    <a href="#" class="text-purple-400 hover:text-purple-300 text-sm font-medium">View All</a>
                </div>

                @if (Model.TrendingSongs != null && Model.TrendingSongs.Any())
                {
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                        @foreach (var song in Model.TrendingSongs)
                        {
                            <a href="@Url.Action("Details", "Song", new { id = song.SongId })" class="song-card group block">
                                <div class="relative aspect-square bg-slate-800 rounded-lg overflow-hidden">
                                    @if (!string.IsNullOrEmpty(song.CoverPath))
                                    {
                                        <img src="@GetWebPath(song.CoverPath)" 
                                             alt="@song.Title" 
                                             class="w-full h-full object-cover">
                                    }
                                    else
                                    {
                                        <div class="w-full h-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
                                            <svg class="w-16 h-16 text-white/30" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"></path>
                                            </svg>
                                        </div>
                                    }

                                    <!-- Play Icon Overlay -->
                                    <div class="play-overlay">
                                        <div class="play-icon-overlay">
                                            <svg class="w-6 h-6 text-white fill-current ml-1" viewBox="0 0 20 20">
                                                <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-4">
                                    <h3 class="text-white font-semibold truncate">@song.Title</h3>
                                    <p class="text-slate-400 text-sm truncate">Artist Name</p>
                                    <p class="text-slate-500 text-xs mt-1">@song.PlayCounts.ToString("N0") plays</p>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <p class="text-slate-400">No trending songs available</p>
                    </div>
                }
            </section>

            <!-- Trending Albums Section -->
            <section class="mb-16">
                <div class="flex items-center justify-between mb-8">
                    <h2 class="text-3xl font-bold text-white">Trending Albums</h2>
                    <a href="#" class="text-purple-400 hover:text-purple-300 text-sm font-medium">View All</a>
                </div>

                @if (Model.TrendingAlbums != null && Model.TrendingAlbums.Any())
                {
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                        @foreach (var album in Model.TrendingAlbums)
                        {
                            <div class="album-card group">
                                <div class="relative aspect-square bg-slate-800 rounded-lg overflow-hidden">
                                    @if (!string.IsNullOrEmpty(album.CoverImage))
                                    {
                                        <img src="@album.CoverImage" alt="@album.Title" class="w-full h-full object-cover">
                                    }
                                    else
                                    {
                                        <div class="w-full h-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
                                            <svg class="w-16 h-16 text-white/30" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"></path>
                                            </svg>
                                        </div>
                                    }

                                    <div class="play-overlay">
                                        <div class="play-icon-overlay">
                                            <svg class="w-6 h-6 text-white fill-current ml-1" viewBox="0 0 20 20">
                                                <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-4">
                                    <h3 class="text-white font-semibold truncate">@album.Title</h3>
                                    <p class="text-slate-400 text-sm truncate">@album.Artist</p>
                                    <p class="text-slate-500 text-xs mt-1">@album.ReleaseYear</p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <p class="text-slate-400">No trending albums available</p>
                    </div>
                }
            </section>
        </main>
    </div>
</div>